{
  "name": "@go-mondo/app-connect-sdk",
  "version": "0.0.1-beta.3",
  "type": "module",
  "description": "A node SDK for Mondo App Connect",
  "license": "MIT",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/common/index.d.ts",
        "default": "./dist/cjs/common/index.js"
      },
      "import": {
        "types": "./dist/esm/common/index.d.ts",
        "default": "./dist/esm/common/index.js"
      }
    },
    "./apps": {
      "require": {
        "types": "./dist/cjs/apps/index.d.ts",
        "default": "./dist/cjs/apps/index.js"
      },
      "import": {
        "types": "./dist/esm/apps/index.d.ts",
        "default": "./dist/esm/apps/index.js"
      }
    },
    "./objects": {
      "require": {
        "types": "./dist/cjs/objects/index.d.ts",
        "default": "./dist/cjs/objects/index.js"
      },
      "import": {
        "types": "./dist/esm/objects/index.d.ts",
        "default": "./dist/esm/objects/index.js"
      }
    },
    "./connections": {
      "require": {
        "types": "./dist/cjs/connections/index.d.ts",
        "default": "./dist/cjs/connections/index.js"
      },
      "import": {
        "types": "./dist/esm/connections/index.d.ts",
        "default": "./dist/esm/connections/index.js"
      }
    },
    "./configurations": {
      "require": {
        "types": "./dist/cjs/configurations/index.d.ts",
        "default": "./dist/cjs/configurations/index.js"
      },
      "import": {
        "types": "./dist/esm/configurations/index.d.ts",
        "default": "./dist/esm/configurations/index.js"
      }
    }
  },
  "scripts": {
    "type-check": "tsc --noEmit -p ./tsconfig.json",
    "build:cjs": "tsc --build tsconfig.json && echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json",
    "build:esm": "tsc --build tsconfig.esm.json && echo '{ \"type\": \"module\" }' > dist/esm/package.json",
    "build": "npm run build:esm & npm run build:cjs",
    "test:ci": "npx vitest run --silent",
    "test:dev": "npx vitest",
    "test": "npx vitest run --silent",
    "check-types": "tsc --noEmit -p ./tsconfig.json",
    "lint": "npx biome lint",
    "lint:fix": "npx biome lint --fix",
    "format": "npx biome format",
    "format:fix": "npx biome format --fix",
    "pre-commit": "pnpm run check-types && pnpm run lint && pnpm run format"
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^22.16.5",
    "@vitest/coverage-v8": "^3.2.3",
    "husky": "^9.1.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20"
  }
}
